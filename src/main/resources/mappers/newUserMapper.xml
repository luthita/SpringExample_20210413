<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

 <mapper namespace="com.luthita.lesson04.dao.NewUserDAO">
 	<insert id="insertNewUser" parameterType="map">
 		INSERT INTO `new_user`
 		(
 			`name`
 			, `yyyymmdd`
 			, `email`
 			, `introduce`
 			, `createdAt`
 			, `updatedAt`
 		)
 		VALUES
 		(
 			#{name}
 			, #{yyyymmdd}
 			, #{email}
 			, #{introduce}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	
 	<select id="selectLastUser" resultType="com.luthita.lesson04.model.NewUser">
 		SELECT
 			`name`
 			, `yyyymmdd`
 			, `email`
 			, `introduce`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`NEW_USER`
 		ORDER BY
 			`id` DESC
 		LIMIT 1;
 	</select>
 	
 	<select id="existNewUserByName" parameterType="String" resultType="boolean">
 		SELECT 
 			count(1)
 		FROM
 			'new_user`
 		WHERE
 			`name` = #{name}
 	</select>
 </mapper>